<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BaseCamp - Project Manager</title>
  <link rel="stylesheet" href="/css/styles.css">
  <script src="https://kit.fontawesome.com/9ebf1c8bfa.js" crossorigin="anonymous"></script>
</head>
<body>
<header class="header" role="banner">
    <div class="container header-content">
      <div class="header-brand">
        <h1>
          <a href="/" class="brand-link">
            <i class="fa-solid fa-people-roof brand-icon"></i>
            <span class="brand-text">BaseCamp</span>
          </a>
        </h1>
      </div>

      <nav class="nav" role="navigation">
        <% if logged_in? %>
          <div class="user-dropdown">
            <button class="user-trigger" id="user-dropdown-trigger">
              <span class="user-avatar">
                <%= current_user.username[0].upcase %>
              </span>
              <span class="username"><%= current_user.username %></span>
              <i class="fa-solid fa-chevron-down dropdown-arrow"></i>
            </button>
            
            <div class="dropdown-menu" id="user-dropdown-menu">
              <div class="dropdown-header">
                <div class="user-info">
                  <span class="user-avatar large">
                    <%= current_user.username[0].upcase %>
                  </span>
                  <div class="user-details">
                    <strong class="user-name"><%= current_user.username %></strong>
                    <span class="user-email"><%= current_user.email %></span>
                    <% if current_user.admin? %>
                      <span class="user-badge admin">Administrator</span>
                    <% else %>
                      <span class="user-badge">User</span>
                    <% end %>
                  </div>
                </div>
              </div>
              
              <div class="dropdown-divider"></div>
              
              <div class="dropdown-links">
                <a href="/projects" class="dropdown-link">
                  <i class="fa-solid fa-diagram-project"></i>
                  <span>Projects</span>
                </a>
                
                <a href="/profile" class="dropdown-link">
                  <i class="fa-solid fa-user"></i>
                  <span>Profile</span>
                </a>
                
                <% if current_user.admin? %>
                  <a href="/admin/users" class="dropdown-link admin-link">
                    <i class="fa-solid fa-shield-halved"></i>
                    <span>Admin Dashboard</span>
                  </a>
                <% end %>
              </div>
              
              <div class="dropdown-divider"></div>
              
              <form action="/logout" method="post" class="logout-form">
                <button type="submit" class="dropdown-link logout-link">
                  <i class="fa-solid fa-arrow-right-from-bracket"></i>
                  <span>Logout</span>
                </button>
              </form>
            </div>
          </div>
        <% else %>
          <div class="auth-links">
            <a href="/login" class="btn-auth btn-login">
              <i class="fa-solid fa-right-to-bracket"></i>
              <span>Login</span>
            </a>
            <a href="/register" class="btn-auth btn-register">
              <i class="fa-solid fa-user-plus"></i>
              <span>Register</span>
            </a>
          </div>
        <% end %>
      </nav>
    </div>
  </header>

  <main class="container" role="main">
    <% if flash[:success] %>
      <div class="flash success"><%= flash[:success] %></div>
    <% end %>
    <% if flash[:error] %>
      <div class="flash error"><%= flash[:error] %></div>
    <% end %>

    <%= yield %>
  </main>

  <footer class="footer">
  <div class="container" style="padding:2rem 0; text-align:center; color:var(--text-muted); font-size:0.9rem;">
    <a href="/about" style="color:var(--text-muted); margin-right:1rem;">About</a>
    <a href="/terms" style="color:var(--text-muted); margin-right:1rem;">Terms</a>
    <a href="/privacy" style="color:var(--text-muted);">Privacy</a>
  </div>
    <div class="container">
      <p>&copy; 2025 BaseCamp. Built with Sinatra & SQLite.</p>
    </div>
  </footer>

  <script>
      // Dropdown functionality
      document.addEventListener('DOMContentLoaded', function() {
        const dropdownTrigger = document.getElementById('user-dropdown-trigger');
        const dropdownMenu = document.getElementById('user-dropdown-menu');
        
        if (dropdownTrigger && dropdownMenu) {
          // Toggle dropdown on click
            dropdownTrigger.addEventListener('click', function(e) {
              e.stopPropagation();
              const isActive = dropdownTrigger.parentElement.classList.contains('active');
              
              // Close all other dropdowns
              document.querySelectorAll('.user-dropdown.active').forEach(dropdown => {
                dropdown.classList.remove('active');
              });
              
              // Toggle current dropdown
              if (!isActive) {
                dropdownTrigger.parentElement.classList.add('active');
              }
        });
            
        // Close dropdown when clicking outside
        document.addEventListener('click', function(e) {
            if (!dropdownTrigger.contains(e.target) && !dropdownMenu.contains(e.target)) {
              dropdownTrigger.parentElement.classList.remove('active');
            }
        });
          
          // Close dropdown when pressing Escape key
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') {
              dropdownTrigger.parentElement.classList.remove('active');
            }
        });
      }
  });
  document.getElementById('new_password').addEventListener('input', function(e) {
          const password = e.target.value;
          const strengthMeter = document.getElementById('password-strength');
          const feedback = document.getElementById('password-feedback');
          
          let strength = 0;
          let message = 'Very Weak';
          let color = 'var(--danger)';
          
          // Length check
          if (password.length >= 8) strength += 25;
          if (password.length >= 12) strength += 10;
          
          // Character variety checks
          if (/[A-Z]/.test(password)) strength += 20;
          if (/[0-9]/.test(password)) strength += 20;
          if (/[^A-Za-z0-9]/.test(password)) strength += 25;
          
          // Determine strength level
          if (strength >= 80) {
              message = 'Very Strong';
              color = 'var(--success)';
          } else if (strength >= 60) {
              message = 'Strong';
              color = 'var(--success)';
          } else if (strength >= 40) {
              message = 'Good';
              color = 'var(--warning)';
          } else if (strength >= 20) {
              message = 'Weak';
              color = 'var(--warning)';
          }
          
          strengthMeter.style.width = Math.min(strength, 100) + '%';
          strengthMeter.style.background = color;
          feedback.textContent = message + ' â€¢ ' + (password.length > 0 ? password.length + ' characters' : 'Enter a password to check strength');
          feedback.style.color = color;
      });
    // Auto-dismiss flash messages after 5 seconds
      setTimeout(() => {
        document.querySelectorAll('.flash').forEach(flash => {
          flash.style.opacity = '0';
          setTimeout(() => flash.remove(), 100);
        });
      }, 5000);

      // Confirm delete actions
      document.querySelectorAll('[data-confirm]').forEach(form => {
        form.addEventListener('submit', (e) => {
          if (!confirm(form.dataset.confirm)) {
            e.preventDefault();
          }
        });
      });
  </script>
</body>
</html>