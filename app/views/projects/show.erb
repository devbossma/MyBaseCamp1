<!-- Comments Section with Unread Tracking -->
<div class="content-card" id="comments">
  <div class="card-header-section">
    <h2 class="card-title">
      <svg class="card-icon" width="20" height="20" viewBox="0 0 20 20" fill="none">
        <path d="M2 10C2 5.58172 5.58172 2 10 2C14.4183 2 18 5.58172 18 10C18 14.4183 14.4183 18 10 18C8.89 18 7.84 17.77 6.88 17.37L3 18L3.63 14.12C3.23 13.16 3 12.11 3 11C3 10.66 3.03 10.33 3.07 10H2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
      </svg>
      Comments
    </h2>
    
    <div style="display: flex; align-items: center; gap: 1rem;">
      <% 
        total_count = total_comments_count(@project)
        unread_count = unread_comments_count(@project)
      %>
      
      <span class="card-badge">
        <%= total_count %> <%= total_count == 1 ? 'comment' : 'comments' %>
      </span>
      
      <% if unread_count > 0 %>
        <span class="card-badge" style="background: rgba(239, 68, 68, 0.1); color: #fca5a5; border: 1px solid rgba(239, 68, 68, 0.3);">
          <%= unread_count %> unread
        </span>
        
        <form action="/projects/<%= @project.id %>/comments/mark_all_read" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-sm btn-ghost" title="Mark all as read">
            <svg width="16" height="16" viewBox="0 0 20 20" fill="none">
              <path d="M3 10L8 15L17 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
            Mark all read
          </button>
        </form>
      <% end %>
    </div>
  </div>
  
  <div class="card-content">
    <!-- New Comment Form -->
    <div class="comment-form-container" style="margin-bottom: 1.5rem;">
      <form action="/projects/<%= @project.id %>/comments" method="POST" class="comment-form">
        <div class="comment-input-wrapper" style="display: flex; gap: 0.75rem;">
          <div class="avatar-sm" style="flex-shrink: 0;">
            <%= current_user.username[0].upcase %>
          </div>
          <div style="flex: 1;">
            <textarea 
              name="content" 
              placeholder="Add a comment..." 
              class="form-control" 
              rows="3" 
              required
              style="width: 100%; resize: vertical; min-height: 80px;"></textarea>
            <div style="display: flex; justify-content: space-between; align-items: center; margin-top: 0.75rem;">
              <div class="attachment-input" style="flex: 1; margin-right: 1rem;">
                <input 
                  type="text" 
                  name="attachment" 
                  placeholder="Attachment URL (optional)" 
                  class="form-control"
                  style="font-size: 0.875rem;">
              </div>
              <button type="submit" class="btn btn-primary">
                <svg width="16" height="16" viewBox="0 0 20 20" fill="none" style="margin-right: 0.25rem;">
                  <path d="M2 10L18 2L14 18L10 12L2 10Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                </svg>
                Post Comment
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>

    <!-- Comments List -->
    <% if @comments.any? %>
      <div class="comments-list" style="display: flex; flex-direction: column; gap: 1rem;">
        <% @comments.each do |comment| %>
          <% 
            is_unread = comment_unread?(comment)
            is_own_comment = comment.user_id == current_user.id
          %>
          
          <div class="comment-item <%= 'comment-unread' if is_unread %>" 
               id="comment-<%= comment.id %>" 
               style="display: flex; gap: 0.75rem; padding: 1rem; background: var(--bg-secondary); border-radius: var(--radius-lg); border: 1px solid var(--border); <%= 'border-left: 3px solid var(--danger);' if is_unread %> position: relative; scroll-margin-top: 100px;">
            
            <!-- Unread indicator -->
            <% if is_unread %>
              <div class="unread-indicator" 
                   style="position: absolute; top: 1rem; right: 1rem; width: 8px; height: 8px; border-radius: 50%; background: var(--danger); box-shadow: 0 0 8px var(--danger);"
                   title="Unread comment"></div>
            <% end %>
            
            <div class="avatar-sm" style="flex-shrink: 0;">
              <%= comment.user.username[0].upcase %>
            </div>
            
            <div class="comment-content" style="flex: 1; min-width: 0;">
              <div class="comment-header" style="display: flex; justify-content: space-between; align-items: flex-start; margin-bottom: 0.5rem;">
                <div>
                  <a href="/profile/<%= comment.user.id %>" class="comment-author" style="font-weight: 600; color: var(--text-primary); text-decoration: none;">
                    <%= comment.user.username %>
                  </a>
                  
                  <% if is_own_comment %>
                    <span class="user-tag" style="margin-left: 0.5rem; padding: 0.125rem 0.5rem; background: rgba(59, 130, 246, 0.1); color: var(--primary-light); border-radius: 4px; font-size: 0.7rem; font-weight: 600;">
                      You
                    </span>
                  <% end %>
                  
                  <span class="comment-time" style="color: var(--text-muted); font-size: 0.8rem; margin-left: 0.5rem;">
                    <%= time_ago(comment.created_at) %>
                    <% if comment.updated_at != comment.created_at %>
                      <span style="font-style: italic;">(edited)</span>
                    <% end %>
                  </span>
                  
                  <% if is_unread %>
                    <span class="new-badge" style="margin-left: 0.5rem; padding: 0.125rem 0.5rem; background: rgba(239, 68, 68, 0.1); color: #fca5a5; border-radius: 4px; font-size: 0.7rem; font-weight: 600;">
                      NEW
                    </span>
                  <% end %>
                </div>
                
                <div class="comment-actions" style="display: flex; gap: 0.5rem;">
                  <% if can?(:edit, comment) %>
                    <a href="/projects/<%= @project.id %>/comments/<%= comment.id %>/edit" class="btn btn-ghost btn-sm" title="Edit comment">
                      <svg width="14" height="14" viewBox="0 0 20 20" fill="none">
                        <path d="M14.5 2.5C15.33 1.67 16.67 1.67 17.5 2.5C18.33 3.33 18.33 4.67 17.5 5.5L6.5 16.5L2 18L3.5 13.5L14.5 2.5Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </a>
                    <form action="/projects/<%= @project.id %>/comments/<%= comment.id %>" method="POST" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                      <input type="hidden" name="_method" value="DELETE">
                      <button type="submit" class="btn btn-ghost btn-sm" title="Delete comment" style="color: var(--danger);">
                        <svg width="14" height="14" viewBox="0 0 20 20" fill="none">
                          <path d="M3 5H17M8 5V3H12V5M8 9V15M12 9V15M5 5L6 17H14L15 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </button>
                    </form>
                  <% end %>
                  
                  <!-- Mark as read button for unread comments -->
                  <% if is_unread %>
                    <form action="/projects/<%= @project.id %>/comments/<%= comment.id %>/mark_read" method="POST" style="display: inline;">
                      <button type="submit" class="btn btn-ghost btn-sm" title="Mark as read">
                        <svg width="14" height="14" viewBox="0 0 20 20" fill="none">
                          <path d="M3 10L8 15L17 5" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                        </svg>
                      </button>
                    </form>
                  <% end %>
                </div>
              </div>
              
              <div class="comment-body" style="color: var(--text-secondary); line-height: 1.6; word-wrap: break-word;">
                <%= simple_format(h(comment.content)) %>
              </div>
              
              <% if comment.attachment && !comment.attachment.empty? %>
                <div class="comment-attachment" style="margin-top: 0.75rem; padding: 0.75rem; background: var(--bg-primary); border-radius: var(--radius); border: 1px solid var(--border);">
                  <a href="<%= comment.attachment %>" target="_blank" rel="noopener noreferrer" style="display: flex; align-items: center; gap: 0.5rem; color: var(--primary-light); font-size: 0.875rem; text-decoration: none;">
                    <svg width="16" height="16" viewBox="0 0 20 20" fill="none">
                      <path d="M10 2V14M10 14L6 10M10 14L14 10M3 17H17" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                    </svg>
                    View Attachment
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-content" style="text-align: center; padding: 2rem;">
        <svg class="empty-icon" width="48" height="48" viewBox="0 0 20 20" fill="none" style="margin: 0 auto 1rem; opacity: 0.3;">
          <path d="M2 10C2 5.58172 5.58172 2 10 2C14.4183 2 18 5.58172 18 10C18 14.4183 14.4183 18 10 18C8.89 18 7.84 17.77 6.88 17.37L3 18L3.63 14.12C3.23 13.16 3 12.11 3 11C3 10.66 3.03 10.33 3.07 10H2Z" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
        <p class="empty-text" style="color: var(--text-muted); margin-bottom: 0.5rem;">No comments yet</p>
        <p class="empty-hint" style="color: var(--text-muted); font-size: 0.875rem;">Be the first to leave a comment!</p>
      </div>
    <% end %>
  </div>
</div>

<script>
// Auto-scroll to comment if hash is present
document.addEventListener('DOMContentLoaded', function() {
  if (window.location.hash) {
    const target = document.querySelector(window.location.hash);
    if (target) {
      setTimeout(() => {
        target.scrollIntoView({ behavior: 'smooth', block: 'center' });
        
        // Add highlight animation
        target.style.transition = 'background 0.3s ease';
        const originalBg = target.style.background;
        target.style.background = 'rgba(59, 130, 246, 0.1)';
        setTimeout(() => {
          target.style.background = originalBg;
        }, 2000);
      }, 100);
    }
  }
});
</script>
             

