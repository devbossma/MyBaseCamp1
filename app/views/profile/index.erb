<!-- Profile Hero Section -->
<div class="project-hero">
    <div class="project-hero-content container">
        <div class="project-title-section">
            <h1 class="project-title"><i class="fa-solid fa-user-tie"></i><%= @user.username %></h1>
            <div class="project-meta-info">
                <div class="meta-item">
                    <i class="fa-solid fa-at"></i>  
                    <span><%= @user.email %></span>
                </div>
                <div class="meta-item">
                    <span class="meta-icon"><i class="fa-sharp fa-solid fa-user"></i></span>
                    <span><%= @user.admin? ? 'Administrator' : 'User' %></span>
                </div>
                <div class="meta-item">
                    <i class="fa-solid fa-clock"></i>
                    <span>Joined <%= time_ago(@user.created_at) %></span>
                </div>
            </div>
            <div class="status-badge status-active">Active Account</div>
        </div>
        <div class="project-hero-actions">
            <a href="/profile/edit" class="btn btn-primary">
                <i class="fa-solid fa-user-pen"></i>
                Edit Profile
            </a>
        </div>
    </div>
</div>

<!-- Main Content Layout -->
<div class="project-layout">
    <!-- Main Content -->
    <div class="project-main">
        <!-- Activity Stats Card -->
        <div class="content-card">
            <div class="card-header-section">
                <h3 class="card-title">
                    <i class="fa-solid fa-chart-column"></i>
                    Activity Overview
                </h3>
            </div>
            <div class="info-list">
                <div class="info-item">
                    <span>Projects Created</span>
                    <strong><%= @user.projects.count %></strong>
                </div>
                <div class="info-item">
                    <span>Projects Contributing</span>
                    <strong><%= @user.contributing_projects.count %></strong>
                </div>
                <div class="info-item">
                    <span>Comments Made</span>
                    <strong><%= @user.comments.count %></strong>
                </div>
                <div class="info-item">
                    <span>Last Active</span>
                    <span><%= time_ago(@user.updated_at) %></span>
                </div>
            </div>
        </div>

        <!-- Recent Projects Card -->
        <div class="content-card">
            <div class="card-header-section">
                <h3 class="card-title">
                    <i class="fa-solid fa-folder-tree"></i>
                    Recent Projects
                </h3>
                <span class="card-badge"><%= @user.projects.limit(5).count %> active</span>
            </div>
            
            <% if @user.projects.any? %>
                <div class="projects-grid" style="grid-template-columns: 1fr; gap: 1rem;">
                    <% @user.projects.limit(5).each do |project| %>
                        <div class="card">
                            <h3>
                                <a href="/projects/<%= project.id %>"><%= project.name %></a>
                            </h3>
                            <p><%= project.description %></p>
                            <div class="project-meta-info">
                                <div class="meta-item">
                                    <i class="fa-solid fa-users-rays"></i>
                                    <span><%= project.contributors.count %> contributors</span>
                                </div>
                                <div class="meta-item">
                                    <i class="fa-solid fa-comments"></i>
                                    <span><%= project.comments.count %> comments</span>
                                </div>
                                <div class="meta-item">
                                    <i class="fa-solid fa-calendar-days"></i>
                                    <span>Updated <%= time_ago(project.updated_at) %></span>
                                </div>
                            </div>
                            <div class="project-actions">
                                <a href="/projects/<%= project.id %>" class="btn btn-sm btn-outline">View Project</a>
                                <% if can?(:edit, project) %>
                                    <a href="/projects/<%= project.id %>/edit" class="btn btn-sm btn-ghost">Edit</a>
                                <% end %>
                            </div>
                        </div>
                    <% end %>
                </div>
                <% if @user.projects.count > 5 %>
                    <div style="text-align: center; margin-top: 1rem;">
                        <a href="/projects?user=<%= @user.id %>" class="btn btn-outline">View All Projects</a>
                    </div>
                <% end %>
            <% else %>
                <div class="empty-content">
                    <i class="fa-regular fa-folder-open"></i>
                    <p class="empty-text">No projects created yet</p>
                    <a href="/projects/new" class="btn btn-primary" style="margin-top: 1rem;">Create First Project</a>
                </div>
            <% end %>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="project-sidebar">
        <!-- Account Info Card -->
        <div class="sidebar-card">
            <h3 class="sidebar-title">Account Information</h3>
            <div class="info-list">
                <div class="info-item">
                    <span>User ID</span>
                    <code class="project-id"># <%= @user.id %></code>
                </div>
                <div class="info-item">
                    <span>Role</span>
                    <span class="status-badge <%= @user.admin? ? 'status-active' : 'status-inactive' %>">
                        <%= @user.admin? ? 'Administrator' : 'Standard User' %>
                    </span>
                </div>
                <div class="info-item">
                    <span>Member Since</span>
                    <span><%= @user.created_at.strftime("%b %d, %Y") %></span>
                </div>
                <div class="info-item">
                    <span>Last Updated</span>
                    <span><%= @user.updated_at.strftime("%b %d, %Y") %></span>
                </div>
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="sidebar-card">
            <h3 class="sidebar-title">Quick Actions</h3>
            <div style="display: flex; flex-direction: column; gap: 0.5rem;">
                <a href="/projects/new" class="btn btn-block btn-primary">
                    <i class="fa-solid fa-circle-plus"></i>
                    New Project
                </a>
                <% if @user.admin? %>
                    <a href="/admin/users" class="btn btn-block btn-ghost">
                        <i class="fa-solid fa-user-gear"></i>
                        Manage Users
                    </a>
                <% end %>
            </div>
        </div>

        <!-- Security Card -->
        <div class="sidebar-card">
            <h3 class="sidebar-title">Security</h3>
            <div class="info-list">
                <div class="info-item">
                    <span>Password</span>
                    <span>••••••••</span>
                </div>
                <div class="info-item">
                    <span>2FA</span>
                    <span class="status-badge status-inactive">Disabled</span>
                </div>
            </div>
            <a href="/profile/security" class="btn btn-block btn-outline" style="margin-top: 1rem;">
                <i class="fa-solid fa-user-shield"></i>
                Security Settings
            </a>
        </div>
    </div>
</div>
